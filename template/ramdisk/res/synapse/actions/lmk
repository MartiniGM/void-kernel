# lmk [file] [target] [value]
FILE="$1"
TARGET="$2"
VALUE="$3"

chmod 660 "$FILE"
if [[ ! -z "$VALUE" ]]; then
	COUNT=1
	for FIELD in $(tr ',' '\n' < "$FILE"); do
		if [[ "$COUNT" -eq "$TARGET" ]]; then
			OUTPUT+="$VALUE"
		else
			OUTPUT+="$FIELD"
		fi
		if [[ "$COUNT" -lt "6" ]]; then
			OUTPUT+=","
		fi
		((COUNT++))
	done
	echo "$OUTPUT" > "$FILE"
fi

echo "$(awk -F , '{print $'$TARGET'}' < "$FILE" 2>/dev/null)"
