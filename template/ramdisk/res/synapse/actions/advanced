case "$1" in
	-f) # advanced -f [field] [path] [value] NOTE: if $2 is NF -> last field, if $2 is 1 -> first field
		if [[ ! -z "$4" ]]; then
			echo "$4" > "$3"; fi
		awk '{print $'$2'}' "$3"
	;;
	-p) # generic -p [delimiter] [field] [path] [value]
		if [[ ! -z "$5" ]]; then
			echo "$5" > "$4"; fi
		awk -F "$2" '{print $'"$3"'}' "$4"
	;;
esac
